WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    PopupWindow

<FirstWindow>:
    name: "create"
    # the variables from py file
    # these are to be used as ids in TextInput
    username: username
    password: password
    re_password: re_password


    BoxLayout:
        orientation: "vertical"
        spacing: 5
        padding: 50
        cols: 1
        Image:
            source: "447.png"
            size_hint_y: "0.1dp"
        Label:
            text: "User_Login"
            size_hint_y: "0.1dp"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            padding: 15

            Label:
                text: "User_Name: "
            TextInput:
                id: username
                multiline: "False"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            padding: 15

            Label:
                text: "Enter_Password: "
            TextInput:
                id: password
                multiline: "False"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            padding: 15


            Label:
                text: "**Re_Enter_Password: "
            TextInput:
                id: re_password
                multiline: "False"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            pos_hint: {'center_x': 0.5}
            spacing: 10

            Button:
                text: "Clear"
                on_press: root.clear_input()

            Button:
                text: "Submit"
                on_press:
                    root.log_in()

<SecondWindow>:
    name: "second"

    BoxLayout:
        orientation: "vertical"
        spacing: 5
        padding: 50
        Label:
            text: "You just Logged in!"
        Button:
            text: "Back"
            on_press:
                root.back_button()

<PopupWindow>:
    name: "popup"

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "please check your password"
        Button:
            text: "understood"
            on_release:
                root.understood()