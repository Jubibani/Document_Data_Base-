WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:

<FirstWindow>:
    name: "create"


    BoxLayout:
        orientation: "vertical"
        spacing: 5
        padding: 50
        cols: 1
        Image:
            source: "447.png"
            size_hint_y: "0.1dp"
        Label:
            text: "User_Login"
            size_hint_y: "0.1dp"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            padding: 15

            Label:
                text: "User_Name: "
            TextInput:
                multiline: "False"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            padding: 15

            Label:
                text: "Enter_Password: "
            TextInput:
                multiline: "False"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            padding: 15


            Label:
                text: "**Re_Enter_Password: "
            TextInput:
                multiline: "False"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            pos_hint: {'center_x': 0.5}
            spacing: 10
            Button:
                text: "Clear"

            Button:
                text: "Submit"
                on_press: root.log_in()
<ThirdWindow>:
    Label:
        text: "You just Logged in!"